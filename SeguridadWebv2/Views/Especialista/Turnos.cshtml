@model SeguridadWebv2.Models.Aplicacion.GeneralViewModels
@{
    ViewBag.Title = "Turnos";
}

<h2>Turnos</h2>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-danger">
            <div class="panel-body">
                <div class="col-md-3">
                    <img src="@Url.Content(@Model.Especialista.ImagenMedico)" class="img-circle img-responsive" />
                </div>
                <div class="col-md-9">
                    <div class="header">
                        @Model.Especialista.Prefijo. @Model.Especialista.Nombre @Model.Especialista.Apellido
                        @Model.Especialista.Telefono
                        @Model.Especialista.NumeroMatricula
                    </div>
                </div>
            </div>
        </div>
        <div class="panel panel-danger">
            <div class="panel-body">
                <div class="col-md-5">
                    <div style="overflow:hidden;" class="form-group">
                        <div id="fechaconsulta">
                        </div>
                    </div>
                </div>
                <div class="col-md-7">
                    <table class="table table-striped table-condensed">
                            <thead>
                                <tr>
                                    <th>Inicio</th>
                                    <th>Fin</th>
                                    <th>Estado</th>
                                    <th>Precio</th>
                                    <th>Reservar</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var horario in Model.Horarios)
                                {
                                    <tr>
                                        <td>@horario.FechaInicio.ToShortTimeString()</td>
                                        <td>@horario.FechaFin.ToShortTimeString()</td>
                                        <td>@horario.Estado</td>
                                        <td>$ @horario.Precio</td>
                                        <td class="text-center">
                                            <a href="@Url.Action("ReservarTurno", "Turno", new { id = horario.IDHorario})" class="btn btn-success btn-xs"><span class="glyphicon glyphicon-pencil"></span> Reservar </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                   </table>
                </div>
            </div>
         </div>
    </div>
</div>

<script>
    $(function () {                                             
        $('#fechaconsulta').datetimepicker({
            format: "dd-mm-yyyy",
            daysOfWeekDisabled: [0, 6],
            inline: true,
            useCurrent: true,
            sideBySide: false
        });

    });
</script>